# Backend / database
POSTGRES_PASSWORD=astraforge
POSTGRES_USER=astraforge
POSTGRES_DB=astraforge
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
DATABASE_URL=postgres://astraforge:astraforge@localhost:5433/astraforge
REDIS_URL=redis://localhost:6379/0

# Auth and security
SECRET_KEY=change-me-in-prod
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:8001
UNSAFE_DISABLE_AUTH=0  # local dev only
SELF_HOSTED=1
AUTH_REQUIRE_APPROVAL=0

# LLM / executors
LLM_PROVIDER=ollama
OPENAI_API_KEY=sk-local-placeholder
AZURE_OPENAI_API_KEY=your-azure-api-key
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=  # Optional: default deployment. Recommended to specify in frontend model field instead
GOOGLE_API_KEY=your-google-api-key
GEMINI_API_KEY=your-gemini-api-key
LLM_MODEL=gpt-4o-mini
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gpt-oss:20b
DEEPAGENT_PROVIDER=ollama
DEEPAGENT_REASONING_EFFORT=high
OLLAMA_NUM_CTX=
OLLAMA_NUM_PREDICT=
OLLAMA_OPTIONS_JSON=
EXECUTOR=codex
RUN_LOG_STREAMER=redis
ASTRAFORGE_EXECUTE_COMMANDS=1

# Workspaces / sandbox
CODEX_CLI_SKIP_PULL=1
CODEX_WORKSPACE_IMAGE=ghcr.io/jeremyjouvancedev/astraforge-codex-cli:latest
CODEX_WORKSPACE_PROXY_URL=http://localhost:8080
CODEX_WORKSPACE_NETWORK=astraforge
SANDBOX_IMAGE=ghcr.io/jeremyjouvancedev/astraforge-sandbox:latest
SANDBOX_REAP_INTERVAL_SEC=60
SANDBOX_S3_BUCKET=astraforge-snapshots
SANDBOX_S3_ENDPOINT_URL=http://localhost:9000
SANDBOX_S3_REGION=us-east-1
SANDBOX_S3_USE_SSL=0
AWS_ACCESS_KEY_ID=astraforge
AWS_SECRET_ACCESS_KEY=astraforge123

# Frontend
VITE_API_BASE_URL=http://localhost:8001/api

# Optional helpers
TAVILY_API_KEY=tvly-placeholder
TAVILY_DISABLE_SSL_VERIFY=0  # Set to 1 to disable SSL verification for Tavily (corporate proxies)

# SSL/TLS Configuration (for corporate proxy environments)
DISABLE_SSL_VERIFY=0  # Set to 1 to disable SSL verification globally (not recommended for production)
SSL_CERT_FILE=  # Path to custom CA bundle (e.g., /opt/certs/cacert.pem)
REQUESTS_CA_BUNDLE=  # Path to CA bundle for requests library

# Email
EMAIL_HOST=smtp.example.fr
EMAIL_PORT=465
EMAIL_USE_TLS=0
EMAIL_USE_SSL=1
EMAIL_HOST_USER=noreply@example.com
EMAIL_HOST_PASSWORD=change-me
DEFAULT_FROM_EMAIL=AstraForge <noreply@astraforge.dev>
EARLY_ACCESS_NOTIFICATION_EMAIL=alerts@example.com

# OPA policy enforcement (optional)
